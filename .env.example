# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/soulmate_sketch_db"
REDIS_URL="redis://localhost:6379"

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
STABILITY_AI_API_KEY=your_stability_ai_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=soulmate-sketch-assets

# Stripe Payment Processing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@soulmate-sketch.com

# Social Media Integration
INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token_here

# External APIs
ASTROLOGY_API_KEY=your_astrology_api_key_here
NUMEROLOGY_API_KEY=your_numerology_api_key_here

# Frontend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
AI_SERVICES_URL=http://localhost:8001

# Security
CORS_ORIGIN=http://localhost:3000
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100        # requests per window

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_VIRAL_FEATURES=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_SOCIAL_SHARING=true
ENABLE_AFFILIATE_PROGRAM=true
